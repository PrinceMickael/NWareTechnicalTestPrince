@{
    ViewData["Title"] = "Bandeau";
}

@model dynamic

@{
    switch (Model.CrudAction)
    {
        case "Create" :
            <div class="alert alert-success" role="alert">
                Create success
            </div>
            break;
        case "Update":
            <div class="alert alert-success" role="alert">
                Update success
            </div>
            break;
        case "Delete":
            <div class="alert alert-success" role="alert">
                Delete success
            </div>
            break;
        case "Exist":
            <div class="alert alert-warning" role="alert">
                Title Already Exist
            </div>
            break;
        case "Used":
            <div class="alert alert-warning" role="alert">
                Category is used in a post
            </div>
            break;
        case "Empty":
            <div class="alert alert-warning" role="alert">
                Field was empty, retry please
            </div>
            break;
        case "Incorrect":
            <div class="alert alert-warning" role="alert">
                One or more fields doesn't respect creation or update rules
            </div>
            break;
        case "Error":
            <div class="alert alert-danger" role="alert">
                La page à rencontré une erreur
            </div>
            break;
    }
}



